@model TitanTechnologyView.Models.CompanyMaster

<h2>Edit Company</h2>

<form asp-action="EditCompanyMaster" method="post">
    <input type="hidden" asp-for="CompanyCode" /> 

    <div class="form-group">
        <label>Company Code</label>
        <input asp-for="CompanyCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Company Address</label>
        <input asp-for="CompanyAddress" class="form-control" />
    </div>
    <div class="form-group">
        <label>GSTN</label>
        <input asp-for="Gstn" class="form-control" />
    </div>
    <div class="form-group">
        <label>PAN Card</label>
        <input asp-for="PanNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contact Person Name</label>
        <input asp-for="ContactPersonName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contact Person Number</label>
        <input asp-for="ContactPersonNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Payment Terms</label>
        <input asp-for="PaymentTerms" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bank Name</label>
        <input asp-for="BankName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Account Name</label>
        <input asp-for="AccountName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bank Account Number</label>
        <input asp-for="BankAccountNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>IFSC Code</label>
        <input asp-for="IfscCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>MICR</label>
        <input asp-for="Micr" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
