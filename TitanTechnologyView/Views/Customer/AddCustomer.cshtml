@model TitanTechnologyView.Models.CustomerFormDto
@{
    ViewData["Title"] = Model.CustomerId == 0 ? "Add Customer" : "Edit Customer";
    var apiOrigin = (string)(ViewBag.ApiOrigin ?? "");
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SaveCustomer" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CustomerId" />

    <!-- keep existing URLs so they round-trip -->
    <input type="hidden" asp-for="Agreement1" />
    <input type="hidden" asp-for="Agreement2" />
    <input type="hidden" asp-for="Agreement3" />
    <input type="hidden" asp-for="Agreement4" />

    <div class="form-group">
        <label asp-for="CompanyCode"></label>
        <input asp-for="CompanyCode" class="form-control" />
        <span asp-validation-for="CompanyCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gstn"></label>
        <input asp-for="Gstn" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PanNumber"></label>
        <input asp-for="PanNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ContactPersonName"></label>
        <input asp-for="ContactPersonName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ContactPersonNumber"></label>
        <input asp-for="ContactPersonNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PaymentTerms"></label>
        <input asp-for="PaymentTerms" class="form-control" />
    </div>

    <hr />
    <div class="form-group">
        <label>Agreement File 1</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.Agreement1))
        {
            <a href="@($"{apiOrigin}{Model.Agreement1}")" target="_blank">View existing file</a>
        
            <br />
        }
        <input asp-for="AgreementFile1" type="file" />
    </div>

    <div class="form-group">
        <label>Agreement File 2</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.Agreement2))
        {
            <a href="@($"{apiOrigin}{Model.Agreement2}")" target="_blank">View existing file</a>
        
            <br />
        }
        <input asp-for="AgreementFile2" type="file" />
    </div>

    <div class="form-group">
        <label>Agreement File 3</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.Agreement3))
        {
            <a href="@($"{apiOrigin}{Model.Agreement3}")" target="_blank">View existing file</a>
        
            <br />
        }
        <input asp-for="AgreementFile3" type="file" />
    </div>

    <div class="form-group">
        <label>Agreement File 4</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.Agreement4))
        {
            <a href="@($"{apiOrigin}{Model.Agreement4}")" target="_blank">View existing file</a>
        
            <br />
        }
        <input asp-for="AgreementFile4" type="file" />
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.CustomerId == 0 ? "Add Customer" : "Update Customer")
    </button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
