@model IEnumerable<TitanTechnologyView.Models.CustomerFormDto>

<h2>Customer List</h2>

<a asp-action="AddCustomer" class="btn btn-success mb-3">+ Add Customer</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Company Code</th>
            <th>Customer Name</th>
            <th>Country</th>
            <th>Contact</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CompanyCode</td>
                <td>@item.CustomerName</td>
                <td>@item.Country</td>
                <td>@item.ContactPersonNumber</td>
                <td>
                    <a asp-action="AddCustomer" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>




