@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero-services parallax" data-aos="fade-down">
    <div class="container">
        <div class="hero-content">
            <h1>Expert SAP Services</h1>
            <p>Transform your business with our comprehensive SAP solutions</p>
            <div class="hero-buttons">
                <a href="#services" class="hero-btn">Explore Services</a>
                <a href="#contact" class="hero-btn-outline">Contact Us</a>
            </div>
        </div>
    </div>
</section>

<!-- Services Overview -->
<section id="services" class="services-overview">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h2 class="section-title">Our SAP Solutions</h2>
            <div class="divider bg-primary mx-auto"></div>
            <p class="lead">Comprehensive services designed to optimize your SAP ecosystem</p>
        </div>

        <div class="services-grid">
            <!-- SAP Implementation -->
            <div class="service-item" data-aos="fade-up" data-aos-delay="100">
                <div class="service-icon">
                    <img src="~/icons/sap-implementation.svg" alt="SAP Implementation" />
                </div>
                <h3>SAP Implementation</h3>
                <p>End-to-end implementation with minimal disruption to your operations</p>
                <ul class="service-features">
                    <li>Requirement analysis & blueprinting</li>
                    <li>System configuration & customization</li>
                    <li>Data migration & testing</li>
                    <li>User training & go-live support</li>
                </ul>
                <a href="#" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
            </div>

            <!-- SAP Rollout -->
            <div class="service-item" data-aos="fade-up" data-aos-delay="200">
                <div class="service-icon">
                    <img src="~/icons/sap-rollout.svg" alt="SAP Rollout" />
                </div>
                <h3>SAP Rollout</h3>
                <p>Seamless expansion across multiple locations and business units</p>
                <ul class="service-features">
                    <li>Template development & localization</li>
                    <li>Multi-country deployment</li>
                    <li>Integration with existing systems</li>
                    <li>Post-rollout optimization</li>
                </ul>
                <a href="#" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
            </div>

            <!-- SAP Migration -->
            <div class="service-item" data-aos="fade-up" data-aos-delay="300">
                <div class="service-icon">
                    <img src="~/icons/sap-migration.svg" alt="SAP Migration" />
                </div>
                <h3>SAP Migration</h3>
                <p>Smooth transition to SAP S/4HANA and next-generation platforms</p>
                <ul class="service-features">
                    <li>System assessment & planning</li>
                    <li>Data conversion & validation</li>
                    <li>Custom code adaptation</li>
                    <li>Cutover planning & execution</li>
                </ul>
                <a href="#" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
            </div>

            <!-- SAP Staffing -->
            <div class="service-item" data-aos="fade-up" data-aos-delay="400">
                <div class="service-icon">
                    <img src="~/icons/sap-staffing.svg" alt="SAP Staffing" />
                </div>
                <h3>SAP Staffing</h3>
                <p>Expert consultants to augment your team and accelerate projects</p>
                <ul class="service-features">
                    <li>On-demand SAP experts</li>
                    <li>Flexible engagement models</li>
                    <li>Domain-specific specialists</li>
                    <li>Knowledge transfer & mentoring</li>
                </ul>
                <a href="#" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
            </div>

            <!-- SAP AMS -->
            <div class="service-item" data-aos="fade-up" data-aos-delay="500">
                <div class="service-icon">
                    <img src="~/icons/sap-ams.svg" alt="SAP AMS" />
                </div>
                <h3>SAP AMS</h3>
                <p>Comprehensive application management and support services</p>
                <ul class="service-features">
                    <li>24/7 system monitoring</li>
                    <li>Incident & problem management</li>
                    <li>Change management & enhancements</li>
                    <li>Performance optimization</li>
                </ul>
                <a href="#" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>
</section>

<!-- Process Section -->
<section class="process-section">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h2 class="section-title">Our Proven Process</h2>
            <div class="divider bg-primary mx-auto"></div>
            <p class="lead">A structured approach to ensure successful SAP implementations</p>
        </div>

        <div class="process-timeline">
            <div class="process-step" data-aos="fade-right">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h4>Discovery & Planning</h4>
                    <p>Understanding your business requirements and creating a detailed roadmap</p>
                </div>
            </div>

            <div class="process-step" data-aos="fade-left">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h4>Design & Blueprint</h4>
                    <p>Creating technical specifications and solution architecture</p>
                </div>
            </div>

            <div class="process-step" data-aos="fade-right">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h4>Development & Configuration</h4>
                    <p>Building and customizing the SAP system to your needs</p>
                </div>
            </div>

            <div class="process-step" data-aos="fade-left">
                <div class="step-number">4</div>
                <div class="step-content">
                    <h4>Testing & Training</h4>
                    <p>Ensuring system quality and preparing your team</p>
                </div>
            </div>

            <div class="process-step" data-aos="fade-right">
                <div class="step-number">5</div>
                <div class="step-content">
                    <h4>Deployment & Support</h4>
                    <p>Go-live assistance and ongoing optimization</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <h2>Ready to Transform Your SAP Landscape?</h2>
                <p>Let our experts help you unlock the full potential of your SAP investment</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0" data-aos="fade-left">
                <a href="#contact" class="btn btn-light btn-lg px-4">Get Started Today</a>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="contact parallax">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h2 class="section-title text-white">Connect With Our Experts</h2>
            <div class="divider bg-white mx-auto"></div>
            <p class="lead text-white">Let's discuss how we can transform your business with SAP solutions</p>
        </div>
        <div class="row">
            <div class="col-lg-6 mx-auto" data-aos="fade-up" data-aos-delay="200">
                <form class="contact-form bg-white p-4 rounded shadow">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="Name" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="Company Name" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <input type="email" class="form-control" placeholder="Email" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="tel" class="form-control" placeholder="Mobile" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <select class="form-control">
                            <option value="">Select Service</option>
                            <option value="implementation">SAP Implementation</option>
                            <option value="rollout">SAP Rollout</option>
                            <option value="migration">SAP Migration</option>
                            <option value="staffing">SAP Staffing</option>
                            <option value="ams">SAP AMS</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" placeholder="Message" rows="4" required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark btn-lg px-4">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>