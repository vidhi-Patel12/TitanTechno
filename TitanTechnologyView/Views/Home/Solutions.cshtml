<!-- Contact Section -->
<section id="contact" class="contact parallax">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h2 class="section-title text-white">Request a Solution Demo</h2>
            <div class="divider bg-white mx-auto"></div>
            <p class="lead text-white">Let our experts show you how our solutions can transform your business</p>
        </div>
        <div class="row">
            <div class="col-lg-6 mx-auto" data-aos="fade-up" data-aos-delay="200">
                <form class="contact-form bg-white p-4 rounded shadow">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="Name" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="Company Name" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <input type="email" class="form-control" placeholder="Email" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="tel" class="form-control" placeholder="Mobile" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <select class="form-control">
                            <option value="">Select Solution</option>
                            <option value="b2b">B2B E-commerce</option>
                            <option value="aiml">Custom AI/ML</option>
                            <option value="exim">EXIM</option>
                            <option value="einvoicing">E-invoicing</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" placeholder="Message" rows="4" required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark btn-lg px-4">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>