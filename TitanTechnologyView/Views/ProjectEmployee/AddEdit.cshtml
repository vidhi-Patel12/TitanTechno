@model TitanTechnologyView.Models.ProjectEmployee

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Project Employee" : "Edit Project Employee";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Save" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="ProjectCode" class="form-label"></label>
        <input asp-for="ProjectCode" class="form-control" />
        <span asp-validation-for="ProjectCode" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="EmployeeId" class="form-label"></label>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="EmployeeType" class="form-label"></label>
        <input asp-for="EmployeeType" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Technology" class="form-label"></label>
        <input asp-for="Technology" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="AllocationType" class="form-label"></label>
        <input asp-for="AllocationType" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="CommissionType" class="form-label"></label>
        <input asp-for="CommissionType" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="ConsultantRate" class="form-label"></label>
        <input asp-for="ConsultantRate" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="RateUnit" class="form-label"></label>
        <input asp-for="RateUnit" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="TimesheetType" class="form-label"></label>
        <input asp-for="TimesheetType" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="SapModule" class="form-label"></label>
        <input asp-for="SapModule" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="EmployeeStartDate" class="form-label"></label>
        <input asp-for="EmployeeStartDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="EmployeeEndDate" class="form-label"></label>
        <input asp-for="EmployeeEndDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="CycleStartDay" class="form-label"></label>
        <input asp-for="CycleStartDay" class="form-control" type="number" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="CycleEndDay" class="form-label"></label>
        <input asp-for="CycleEndDay" class="form-control" type="number" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="PaymentMode" class="form-label"></label>
        <input asp-for="PaymentMode" class="form-control" />
    </div>

    @* TimesheetRequired *@
    <div class="form-check">
        <input type="checkbox" name="TimesheetRequired" value="true"
               @(Model.TimesheetRequired == true ? "checked" : "") class="form-check-input" />
        <label class="form-check-label" for="TimesheetRequired">Timesheet Required</label>
    </div>


    <div class="form-group mb-2">
        <label asp-for="CustomerRate" class="form-label"></label>
        <input asp-for="CustomerRate" class="form-control" type="number" step="0.01" />
    </div>

    @* Inactive *@
    <div class="form-check">
        <input type="checkbox" name="Inactive" value="true"
               @(Model.Inactive == true ? "checked" : "") class="form-check-input" />
        <label class="form-check-label" for="Inactive">Inactive</label>
    </div>

    <div class="form-group mb-2">
        <label asp-for="SalaryPaymentDays" class="form-label"></label>
        <input asp-for="SalaryPaymentDays" class="form-control" type="number" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="TdsPercent" class="form-label"></label>
        <input asp-for="TdsPercent" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="AccountPreference" class="form-label"></label>
        <input asp-for="AccountPreference" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="TextFields" class="form-label"></label>
        <textarea asp-for="TextFields" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
