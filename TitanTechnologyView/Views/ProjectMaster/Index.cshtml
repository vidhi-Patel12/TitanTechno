@model IEnumerable<TitanTechnologyView.Models.ProjectMaster>
@{
    ViewData["Title"] = "Projects";
}

<h2>Project List</h2>

<a asp-action="AddEdit" class="btn btn-success mb-3">+ Add Project</a>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Start</th>
            <th>End</th>
            <th>CustomerId</th>
            <th>Rate</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProjectCode</td>
                <td>@item.Description</td>
                <td>@item.StartDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.EndDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.CustomerId</td>
                <td>@item.CustomerRate</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="AddEdit" asp-route-projectCode="@item.ProjectCode" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-projectCode="@item.ProjectCode"
                       onclick="return confirm('Are you sure you want to delete this project?');"
                       class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
