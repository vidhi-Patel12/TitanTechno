@model IEnumerable<TitanTechnologyView.Models.Timesheet>

@{
    ViewData["Title"] = "Timesheet List";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="AddEdit" class="btn btn-primary mb-3">+ Add Timesheet</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Project Code</th>
            <th>Employee Id</th>
            <th>Type</th>
            <th>Month-Year</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th style="width:150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var t in Model)
            {
                <tr>
                    <td>@t.TimesheetId</td>
                    <td>@t.ProjectCode</td>
                    <td>@t.EmployeeId</td>
                    <td>@t.TimesheetType</td>
                    <td>@t.MonthYear</td>
                    <td>@t.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@t.EndDate?.ToString("yyyy-MM-dd")</td>
                    <td>@t.Status</td>
                    <td>
                        <a asp-action="AddEdit" asp-route-id="@t.TimesheetId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@t.TimesheetId" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this timesheet?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No timesheets found.</td>
            </tr>
        }
    </tbody>
</table>
